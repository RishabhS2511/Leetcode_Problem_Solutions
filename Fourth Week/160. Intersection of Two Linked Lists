public class Solution {
    public ListNode getIntersectionNode(ListNode headA, ListNode headB) {
        ListNode tempA = headA;
        ListNode tempB = headB;

        int countA= 0;
        int countB= 0;

        while(tempA!=null){
            countA++;
            tempA=tempA.next;
        }
        tempA = headA;

         while(tempB!=null){
            countB++;
            tempB=tempB.next;
        }
        tempB = headB;

        if(countA>countB){
            int idx = countA-countB;
            for(int i=0; i<idx; i++)
            tempA = tempA.next;
        }else{
            int idx = countB-countA;
            for(int i=0; i<idx; i++)
            tempB = tempB.next;
        }

        while(tempA!=tempB){
            tempA=tempA.next;
            tempB=tempB.next;
        }
        return tempA;
    }
}
